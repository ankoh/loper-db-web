{
    "compilerOptions": {
        "baseUrl": "../loper-db-web-app/src",
        "outDir": "../loper-db-web-app/build/ts",
        "target": "es5",
        "module": "es2020",
        // TODO(ankoh): Upgrade node resolution to node12 for exports once typescript 4.6.0 is out
        // https://www.typescriptlang.org/docs/handbook/esm-node.html
        "moduleResolution": "node",
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "strict": true,
        "jsx": "react",
        "types": ["node"],
        "plugins": [{ "name": "typescript-plugin-css-modules" }],
        "lib": ["es6", "es2020", "dom"]
    },
    "exclude": ["../loper-db-web-app/node_modules"],
    "include": ["../loper-db-web-app/src/**/*", "../loper-db-web-app/test/**/*", "../loper-db-web-app/types/*.d.ts"]
}
